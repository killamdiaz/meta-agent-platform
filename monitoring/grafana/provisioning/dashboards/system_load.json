{
  "title": "System Load",
  "panels": [
    {
      "type": "graph",
      "title": "CPU by Container",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "rate(container_cpu_usage_seconds_total[2m])" }
      ],
      "id": 1
    },
    {
      "type": "graph",
      "title": "Memory Usage",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "container_memory_usage_bytes" }
      ],
      "id": 2
    },
    {
      "type": "logs",
      "title": "All Logs",
      "datasource": "Loki",
      "targets": [
        { "expr": "{component=~\".+\"}" }
      ],
      "id": 3
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
